<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/holo_blue_light">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="75dp"
            android:background="#FFFFFF">
        <Button
                android:id="@+id/news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:shadowColor="#000000"
                android:shadowRadius="0"
                android:drawableRight="@drawable/collectionsviewaslist"
                android:text="@string/news" />

        <Button
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:shadowColor="#000000"
                android:shadowRadius="0"
                android:drawableRight="@drawable/deviceaccesscamera"
                android:text="@string/photo" />

        <Button
                android:id="@+id/report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowColor="#000000"
                android:shadowRadius="0"
                android:background="@drawable/background"
                android:drawableRight="@drawable/contentedit"
                android:text="@string/report" />

        <Button
                android:id="@+id/action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:shadowColor="#000000"
                android:shadowRadius="0"
                android:paddingBottom="4dp"
                android:drawableRight="@drawable/actionabout"
                android:text="@string/action" />

        <Button
                android:id="@+id/directory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowColor="#000000"
                android:shadowRadius="0"
                android:background="@drawable/background"
                android:drawableRight="@drawable/socialgroup"
                android:text="@string/directory" />

        <Button
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:drawableRight="@drawable/actionsearch"
                android:text="Director" />
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowColor="#000000"
                android:shadowRadius="0"
                android:background="@drawable/background"
                android:drawableRight="@drawable/socialgroup"
                android:text="Speech Action"
                android:id="@+id/button" android:layout_gravity="left|center_vertical"/>

        <ListView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/list"/>
    </LinearLayout>
</LinearLayout>