<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:id="@+id/titleview" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="date"
            android:id="@+id/newstitle" android:layout_below="@+id/titleview" android:layout_alignParentLeft="true"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="publisher"
            android:id="@+id/publisher" android:layout_below="@+id/titleview" android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Body"
            android:id="@+id/bodyText" android:layout_below="@+id/newstitle" android:layout_alignParentLeft="true"
            android:layout_marginTop="11dp" android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>